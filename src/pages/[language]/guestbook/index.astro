---
import RootLayout from "../../../layouts/RootLayout.astro";
import GuestbookForm from "../../../components/guestbook/GuestbookForm.astro";
import GuestbookList from "../../../components/guestbook/GuestbookList.astro";
import type { Languages } from "../../../common/types";
import { printPageTitle } from "../../../common/functions";
const { language } = Astro.params as { language: Languages };
const title = printPageTitle(Astro.url.pathname, language);
---

<RootLayout title={title}>
  <div class="mx-auto max-w-4xl">
    <GuestbookForm language={language} />
    <GuestbookList language={language} />
  </div>
</RootLayout>
