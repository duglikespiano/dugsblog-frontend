---
import RootLayout from "../../layouts/RootLayout.astro";
import CommitHistoryComponent from "../../components/main/CommitHistory";
import Profile from "../../components/main/Profile.astro";
import Characteristics from "../../components/main/Characteristics.astro";
import { pageTitles } from "../../common/htmlElements";
import type { Languages } from "../../common/types";
const { language } = Astro.params as { language: Languages };
const title = pageTitles["main"][language];
---

<RootLayout title={title} language={language}>
  <Profile language={language} />
  <CommitHistoryComponent client:only />
  <Characteristics language={language} />
</RootLayout>
