---
import Head from "./Head.astro";
import OuterLayout from "./OuterLayout.astro";
import InnerLayout from "./InnerLayout.astro";
import { printHTMLDocumentLanguage } from "../common/functions";
import type { Languages } from "../common/types";
import "../styles/global.css";
import "../styles/common.scss";
const { title } = Astro.props;
const { language } = Astro.params as { language: Languages };
---

<!doctype html>
<html lang={printHTMLDocumentLanguage(language)} data-overlayscrollbars-initialize>
  <Head title={title} />
  <body data-overlayscrollbars-initialize>
    <OuterLayout>
      <InnerLayout language={language}>
        <slot />
      </InnerLayout>
    </OuterLayout>
  </body>
</html>
