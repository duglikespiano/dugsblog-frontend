---
import { menuInfo } from "../common/html-elements";
import type { Languages } from "../common/types";
const { language } = Astro.params as { language: Languages };
---

<footer class="flex items-center justify-center">
  <ul class="text-rosewater flex gap-3 text-base font-bold md:gap-4">
    {
      (Object.keys(menuInfo) as (keyof typeof menuInfo)[]).map((item) => (
        <li class="transition-text hover:text-gray3 duration-300">
          <h2>
            <a
              class="no-underline"
              href={`/${language}${menuInfo[item]["href"]}`}
            >
              {menuInfo[item][language]}
            </a>
          </h2>
        </li>
      ))
    }
  </ul>
</footer>
