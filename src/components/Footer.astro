---
import { routes } from '../common/variables';
const { languages } = Astro.params;
---

<footer class="flex items-center justify-center">
	<ul class="flex text-1xl gap-4 text-rosewater font-bold">
		{
			routes.map((route) => (
				<li class="transition-text hover:text-gray3 duration-300">
					<a class="no-underline" href={`/${languages}/${route.url}`}>
						{route.name}
					</a>
				</li>
			))
		}
	</ul>
</footer>
