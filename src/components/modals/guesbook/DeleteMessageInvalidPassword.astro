---
import Modal from "../../../layouts/Modal.astro";
import { Icon } from "astro-icon/components";
import type { Languages } from "../../../common/types";
import { deleteMessageInvalidPasswordModal } from "../../../common/htmlElements";
const { language } = Astro.params as { language: Languages };
---

<Modal modalName="delete-message-invalid-password">
  <div
    id="delete-message-invalid-password"
    class="relative mx-6 flex w-full max-w-[28rem] flex-col gap-4 rounded-4xl border-4 p-5"
  >
    <div class="flex flex-col items-center justify-center" data-on-success>
      <Icon name="humbleicons:exclamation" class="h-28 w-28 text-red-500" />
      <p class="mt-3 text-2xl" data-delete-message-invalid-password>
        {deleteMessageInvalidPasswordModal[language]["text"]}
      </p>
      <button
        class="bg-rosewater mt-3 h-12 w-full cursor-pointer rounded-lg text-xl"
        data-delete-message-invalid-password-modal-close-button
        >{deleteMessageInvalidPasswordModal[language]["confirm"]}</button
      >
    </div>
  </div>
</Modal>

<script>
  import { deleteMessageInvalidPasswordModalStore } from "../../../common/stores";
  const contactCompletModalCloseButton = document.querySelector(
    "[data-delete-message-invalid-password-modal-close-button]",
  );
  contactCompletModalCloseButton?.addEventListener("click", () => {
    deleteMessageInvalidPasswordModalStore.set(false);
  });
</script>
