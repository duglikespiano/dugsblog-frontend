<button id="openDialog">Open</button>
<script>
	import { isModalOpenStore } from '../common/stores';

	function openDialog() {
		const isModalOpen = isModalOpenStore.get();
		isModalOpenStore.set(!isModalOpen);
	}

	// Add an event listener to the button
	document.getElementById('openDialog')!.addEventListener('click', openDialog);
</script>
