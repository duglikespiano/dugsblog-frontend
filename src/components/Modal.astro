<p id="modal" class="w-full h-full absolute top-0 left-0 bg-black opacity-50 z-10 flex justify-center items-center">
	<button class="z-20 relative" data-modal-close-button>asdasdasd</button>
</p>
<script>
	import { isModalOpenStore } from '../common/stores';

	isModalOpenStore.subscribe((open) => {
		if (open) {
			(document.querySelector('#modal') as HTMLElement).style.display = 'flex';
		} else {
			(document.querySelector('#modal') as HTMLElement).style.display = 'none';
		}
	});

	function openModal() {
		const isModalOpen = isModalOpenStore.get();
		isModalOpenStore.set(!isModalOpen);
	}

	(document.querySelector('#modal') as HTMLElement).style.display = 'none';
	document.querySelector('[data-modal-close-button]')!.addEventListener('click', openModal);
</script>
