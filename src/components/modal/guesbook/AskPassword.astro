---
import Modal from "../../../layouts/Modal.astro";
import { Icon } from "astro-icon/components";
import type { Languages } from "../../../common/types";
const { language } = Astro.props as { language: Languages };
---

<Modal modalName="ask-password">
  <div id="ask-password" class="relative mx-6 flex w-full max-w-[28rem] flex-col gap-4 rounded-4xl border-4 p-5">
    <div class="flex w-full flex-col gap-2">
      <div class="flex flex-col items-center justify-center" data-on-success>
        <p class="mt-4 flex text-2xl" data-ask-password>
          Please input password<Icon name="mdi:password-outline" class="dark:text-yellow2 text-4xl" />
        </p>
      </div>
      <input
        type="text"
        class="bg-gray3 placeholder:te`x`t-sm h-12 w-full rounded-md pl-2 placeholder-slate-950 placeholder:font-bold placeholder:opacity-50"
        placeholder="Please input password"
      />
    </div>
    <div class="grid w-full grid-cols-2 gap-4">
      <button class="dark:bg-green3 h-14 w-full cursor-pointer rounded-lg text-xl">Confirm</button>
      <button class="bg-rosewater h-14 w-full cursor-pointer rounded-lg text-xl" data-ask-password-modal-close-button
        >Cancel</button
      >
    </div>
  </div>
</Modal>

<script>
  import { isModalOpenStore } from "../../../common/stores";
  const contactCompletModalCloseButton = document.querySelector("[data-ask-password-modal-close-button]");

  contactCompletModalCloseButton?.addEventListener("click", () => {
    const previousStore = isModalOpenStore.get();
    isModalOpenStore.set({
      ...previousStore,
      "ask-password": false,
    });
  });
</script>
