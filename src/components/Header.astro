---
import Hamburger from "./Hamburger.astro";
import { logoInfo, navInfo } from "../common/html-elements";
import type { Languages } from "../common/types";
const { language } = Astro.params as { language: Languages };
---

<header
  class="bg-green1 fixed top-0 left-0 z-20 w-full px-5 py-4 md:static md:w-full md:px-0"
>
  <div class="relative justify-between md:flex">
    <h1 class="text-rosewater text-5xl leading-none font-extrabold">
      <a
        href={`/${language}/${logoInfo["href"]}`}
        class="leading-none no-underline">{logoInfo[language]}</a
      >
    </h1>
    <nav class="flex items-center">
      <ul
        class="text-rosewater hidden gap-3 text-2xl font-bold md:flex lg:gap-4 lg:text-3xl"
      >
        {
          (Object.keys(navInfo) as (keyof typeof navInfo)[]).map((item) => (
            <li class="transition-text hover:text-gray3 duration-300">
              <h2>
                <a
                  class="no-underline"
                  href={`/${language}${navInfo[item]["href"]}`}
                >
                  {navInfo[item][language]}
                </a>
              </h2>
            </li>
          ))
        }
      </ul>
    </nav>
    <Hamburger />
  </div>
</header>
