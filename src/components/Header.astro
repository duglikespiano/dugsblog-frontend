---
import { routes } from "../common/variables";
import ModalOpenButton from "./ModalOpenButton.astro";
const { language } = Astro.params;
---

<header class="flex justify-between">
  <h1 class="text-rosewater text-5xl leading-none font-extrabold lg:text-6xl">
    <a href="/en" class="inline-block leading-none no-underline"> Dug's Blog</a>
  </h1>

  <nav class="flex items-center">
    <ul class="text-rosewater hidden gap-4 text-3xl font-bold lg:flex">
      {
        routes.map((route) => (
          <li class="transition-text hover:text-gray3 duration-300">
            <h2>
              <a class="no-underline" href={`/${language}/${route.url}`}>
                {route.name}
              </a>
            </h2>
          </li>
        ))
      }
    </ul>
    <ModalOpenButton />
  </nav>
</header>
