---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import profileImage from "../../assets/profile.png";
---

<section
  id="profile"
  class="mx-auto justify-center md:grid md:w-full md:grid-cols-2 md:gap-10 lg:flex lg:w-[844px] lg:justify-between"
>
  <Image
    class="ml-auto aspect-square w-[300px] rounded-full lg:w-[400px]"
    src={profileImage}
    alt="Dug's profile image"
  />
  <div class="flex flex-col justify-end">
    <p class="flex flex-col">
      <span class="text-gray2 mb-3 md:text-3xl lg:text-4xl">Hello! I am</span>
      <span class="text-hotpink font-extrabold md:text-5xl lg:text-7xl"
        >Suho Park</span
      >
      <span class="text-yellow1 mb-5 md:text-4xl lg:text-4xl"
        >Web developer</span
      >
      <span class="text-gray2 mb-14 text-2xl"
        ><span class="opacity-80">slowly but steadily</span>&nbsp;üê¢</span
      >
    </p>
    <div class="text-gray2 flex md:text-5xl lg:text-6xl">
      <a
        href="https://www.github.com/duglikespiano"
        target="_blank"
        class="duration-200 hover:scale-110"
      >
        <Icon name="ph:github-logo-light" />
      </a>
      <a
        href="https://www.instagram.com/piano_dug"
        target="_blank"
        class="duration-200 hover:scale-110"
      >
        <Icon name="ph:instagram-logo-light" />
      </a>
    </div>
  </div>
</section>
