---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import profileImage from '../../assets/profile.png';
---

<section
	id="profile"
	class="lg:flex lg:justify-between lg:w-[844px] md:grid md:grid-cols-2 md:w-full md:justify-center md:gap-10 mx-auto"
>
	<Image class="rounded-full lg:w-[400px] aspect-square" src={profileImage} alt="Dug's profile image" />
	<div class="flex flex-col justify-end">
		<p>
			<span class="inline-block lg:text-4xl md:text-3xl mb-3 text-gray2">Hello! I am</span><br />
			<span class="inline-block lg:text-7xl md:text-5xl font-extrabold text-hotpink">Suho Park</span><br />
			<span class="inline-block lg:text-4xl md:text-4xl mb-5 text-yellow1">Web developer</span><br />
			<span class="inline-block text-2xl mb-14 text-gray2 opacity-80"
				>slowly but steadily <span class="opacity-100">üê¢</span></span
			><br />
		</p>
		<div class="flex text-gray2 lg:text-6xl md:text-5xl">
			<a href="https://www.github.com/duglikespiano" target="_blank" class="hover:scale-110 duration-200">
				<Icon name="ph:github-logo-light" />
			</a>
			<a href="https://www.instagram.com/piano_dug" target="_blank" class="hover:scale-110 duration-200">
				<Icon name="ph:instagram-logo-light" />
			</a>
		</div>
	</div>
</section>
